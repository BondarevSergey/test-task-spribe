{
    "tabWidth": 4,
    "printWidth": 120,
    "bracketSpacing": true,
    "singleQuote": true,
    "endOfLine": "auto",
    "overrides": [
        {
            "files": "*.ts",
            "options": {
                "semi": true,
                "trailingComma": "none",
                "arrowParens": "always"
            }
        },
        {
            "files": "*.html",
            "options": {
                "bracketSameLine": false,
                "singleQuote": false
            }
        }
    ]
}
